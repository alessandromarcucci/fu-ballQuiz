<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent">
    
    <TextView android:id="@+id/title_categories"
              android:padding="20dip"
              android:focusable="false"
              android:focusableInTouchMode="false"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:textColor="@color/White"
              android:textSize="20dp"/>
    
    <!--***********************-->
    <!--*** TOOLBAR LAYOUT ****-->
    <!--***********************-->

    <RelativeLayout android:id="@+id/toolbar"
          android:layout_marginBottom="-50dip"
          android:visibility="gone"
          android:layout_height="50dip"
          android:layout_width="fill_parent">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">
        <Button android:id="@+id/easyButton"
                android:layout_height="40dip"
                android:layout_width="100dp"
                android:focusable="false"
                android:focusableInTouchMode="false"
                
                android:text="Easy"
                android:textSize="12dp"
                android:textColor="@color/White"
                android:background="@drawable/btn_random_easy"
                android:onClick="easyButton"/>
        <Button android:id="@+id/normalButton"
                android:layout_height="40dip"
                android:layout_width="100dp"
                android:layout_marginLeft="120dp"
                android:focusable="false"
                android:focusableInTouchMode="false"
                
                android:text="Normal"
                android:textSize="12dp"
                android:textColor="@color/White"
                android:background="@drawable/btn_random_normal"/>
        <Button android:id="@+id/hardButton"
                android:layout_height="40dip"
                android:layout_width="100dp"
                android:layout_marginLeft="240dp"
               
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:text="Hard"
                android:textSize="12dp"
                android:textColor="@color/White"
                android:background="@drawable/btn_random_hard"/>
        </RelativeLayout>

    </RelativeLayout>
</LinearLayout>