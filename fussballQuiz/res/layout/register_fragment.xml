<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/firstLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/transparent"
    android:orientation="vertical" 
   	>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">
    	
        <LinearLayout
            	android:id="@+id/layout_1"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
		        android:layout_marginTop="30dp"
		        android:orientation="horizontal" >
		        
		        <ImageView
	        	    android:layout_width="0dp"
	        	    android:layout_height="wrap_content"
	        	    android:layout_weight="0.1" />
		        <TextView
		            android:id="@+id/register_name_account_text"
			        android:layout_width="0dp"
			        android:layout_height="wrap_content"
			        android:layout_weight="0.9"
			        android:textSize="12dp"
			        android:textColor="@color/White"
			        android:text="Username"
			        android:layout_marginLeft="20dp"/>
		 </LinearLayout>
		 
	     <LinearLayout
	          	android:id="@+id/layout_2"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_below="@+id/layout_1"
		        android:layout_weight="1"
		        android:layout_marginTop="5dp"
		        android:orientation="horizontal" >
        	
	        	<ImageView 
	        	    android:layout_width="0dp"
	        	    android:layout_height="wrap_content"
	        	    android:layout_weight="0.1" />
			     <EditText 
			         android:id="@+id/register_name_account"
			         android:layout_width="0dp"
			         android:layout_height="wrap_content"
			         android:layout_weight="0.8"
			         android:paddingTop="10dp"
			         android:paddingBottom="10dp"
			         android:paddingLeft="18dp"
			         android:textColor="@color/Black"
			         android:background="@drawable/round_background"
			         android:hint="peterlustig"
			         android:textSize="12dp"/>
			      <ImageView 
	        	    android:layout_width="0dp"
	        	    android:layout_height="wrap_content"
	        	    android:layout_weight="0.1" />
			</LinearLayout>
			
	     <LinearLayout
            	android:id="@+id/layout_3"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_below="@+id/layout_2"
		        android:layout_weight="1"
		        android:layout_marginTop="15dp"
		        android:orientation="horizontal" >
		        
            	<ImageView
	        	    android:layout_width="0dp"
	        	    android:layout_height="wrap_content"
	        	    android:layout_weight="0.1" />
	     
			     <TextView
			         android:id="@+id/register_email_text"
			         android:layout_width="0dp"
			         android:layout_height="wrap_content"
			         android:layout_weight="0.9"
			         android:textSize="12dp"
			         android:textColor="@color/White"
			         android:text="E-Mail"
			         android:layout_marginLeft="20dp"/>
			     </LinearLayout>
	     	
	     	<LinearLayout
	          	android:id="@+id/layout_4"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_below="@+id/layout_3"
		        android:layout_weight="1"
		        android:layout_marginTop="5dp"
		        android:orientation="horizontal" >
        	
	        	<ImageView 
	        	    android:layout_width="0dp"
	        	    android:layout_height="wrap_content"
	        	    android:layout_weight="0.1" />
	        	
			     <EditText 
			         android:id="@+id/register_email"
			         android:layout_width="0dp"
			         android:layout_height="wrap_content"
			         android:layout_weight="0.8"
			         android:background="@drawable/round_background"
			         android:textColor="@color/Black"
			         android:hint="peterlustig"
			         android:textSize="12dp"
			         android:paddingBottom="10dp"
			         android:paddingLeft="18dp"
			         android:paddingTop="10dp"/>
			     
			     <ImageView 
	        	    android:layout_width="0dp"
	        	    android:layout_height="wrap_content"
	        	    android:layout_weight="0.1" />
			</LinearLayout>
			
	     	<LinearLayout
	          	android:id="@+id/layout_5"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_below="@+id/layout_4"
		        android:layout_weight="1"
		        android:layout_marginTop="15dp"
		        android:orientation="horizontal" >
        	
	        	<ImageView 
	        	    android:layout_width="0dp"
	        	    android:layout_height="wrap_content"
	        	    android:layout_weight="0.1" />
	     
				     <TextView
				         android:id="@+id/register_first_password_text"
				         android:layout_width="0dp"
				         android:layout_height="wrap_content"
				         android:layout_weight="0.9"
				         android:textSize="12dp"
				         android:textColor="@color/White"
				         android:text="Passwort"
				         android:layout_marginLeft="20dp"/>
			</LinearLayout>
			
	     	<LinearLayout
	          	android:id="@+id/layout_6"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_below="@+id/layout_5"
		        android:layout_weight="1"
		        android:layout_marginTop="5dp"
		        android:orientation="horizontal" >
        	
	        	<ImageView 
	        	    android:layout_width="0dp"
	        	    android:layout_height="wrap_content"
	        	    android:layout_weight="0.1" />
	        	
				     <EditText 
				         android:id="@+id/register_first_password"
				         android:layout_width="0dp"
				         android:layout_height="wrap_content"
				         android:layout_weight="0.8"
				         android:paddingTop="10dp"
				         android:paddingBottom="10dp"
				         android:paddingLeft="18dp"
				         android:background="@drawable/round_background"
				         android:hint="peterlustig"
				         android:ems="10"
				         android:textColor="@color/Black"
				         android:inputType="textPassword"
				         android:textSize="12dp"/>
				<ImageView 
	        	    android:layout_width="0dp"
	        	    android:layout_height="wrap_content"
	        	    android:layout_weight="0.1" />
			</LinearLayout>
			
	     	<LinearLayout
	          	android:id="@+id/layout_7"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_below="@+id/layout_6"
		        android:layout_weight="1"
		        android:layout_marginTop="15dp"
		        android:orientation="horizontal" >
        	
	        	<ImageView 
	        	    android:layout_width="0dp"
	        	    android:layout_height="wrap_content"
	        	    android:layout_weight="0.1" />
	     
			     <TextView
			         android:id="@+id/register_second_password_text"
			         android:layout_width="0dp"
			         android:layout_height="wrap_content"
			         android:layout_weight="0.9"
			         android:textSize="12dp"
			         android:textColor="@color/White"
			         android:text="Request Passwort"
			         android:layout_marginLeft="20dp"/>
			     
			</LinearLayout>
			
	     	<LinearLayout
	          	android:id="@+id/layout_8"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_below="@+id/layout_7"
		        android:layout_weight="1"
		        android:layout_marginTop="5dp"
		        android:orientation="horizontal" >
        	
	        	<ImageView 
	        	    android:layout_width="0dp"
	        	    android:layout_height="wrap_content"
	        	    android:layout_weight="0.1" />
			
	     	
			     <EditText 
			         android:id="@+id/register_second_password"
			         android:layout_width="0dp"
			         android:layout_height="wrap_content"
			         android:layout_weight="0.8"
			         android:paddingBottom="10dp"
			         android:paddingLeft="18dp"
			         android:paddingTop="10dp"
			         android:background="@drawable/round_background"
			         android:hint="peterlustig"
			         android:ems="10"
			         android:textColor="@color/Black"
		             android:inputType="textPassword"
			         android:textSize="12dp"/>
			     
			     <ImageView 
	        	    android:layout_width="0dp"
	        	    android:layout_height="wrap_content"
	        	    android:layout_weight="0.1" />
			</LinearLayout>
			
	     	<LinearLayout
	          	android:id="@+id/layout_9"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_below="@+id/layout_8"
		        android:layout_weight="1"
		        android:layout_marginTop="25dp"
		        android:orientation="horizontal" >
			     
	     	    <ImageView 
	        	    android:layout_width="0dp"
	        	    android:layout_height="wrap_content"
	        	    android:layout_weight="0.1" />
	     
			     <Button
			         android:id="@+id/register_facebook_connect"
			         android:layout_width="0dp" 
			         android:layout_height="50dp" 
			         android:layout_weight="0.8"
			         android:paddingTop="10dp"
			         android:paddingBottom="10dp"
			         android:background="@drawable/btn_options_account_fb"
			         android:textColor="@color/White"
			         android:textSize="18dp"
			         android:text="facebook connect"
			         android:onClick="facebookLogin"/>
			     <ImageView 
	        	    android:layout_width="0dp"
	        	    android:layout_height="wrap_content"
	        	    android:layout_weight="0.1" />
			 </LinearLayout>
			 
	     	<LinearLayout
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_below="@+id/layout_9"
		        android:layout_weight="1"
		        android:layout_marginTop="20dp"
		        android:orientation="horizontal" >
			     
	     	    <ImageView 
	        	    android:layout_width="0dp"
	        	    android:layout_height="wrap_content"
	        	    android:layout_weight="0.1" />
	     
			      <Button
			         android:id="@+id/register_register"
			         android:layout_width="0dp" 
			         android:layout_height="wrap_content" 
			         android:layout_weight="0.8"
			         android:background="@drawable/btn_lobby_new_game"
			         android:textColor="@color/White"
			         android:textSize="18dp"
			         android:paddingBottom="10dp"
			         android:paddingTop="10dp"
			         android:text="Register"/>
			      <ImageView 
	        	    android:layout_width="0dp"
	        	    android:layout_height="wrap_content"
	        	    android:layout_weight="0.1" />
			  </LinearLayout>
	     
	     
	     </RelativeLayout>
