<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/back_game" >
    
    <RelativeLayout 
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:background="@color/transparent"
        android:layout_marginTop="15dp"
        >
        <TextView
            android:id="@+id/myrank"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:textSize="16dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/White"
            android:layout_centerVertical="true"
            />
       
        <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        >
    <com.example.splashscreen.RoundedImageView
        android:id="@+id/myrank_image"
		android:layout_width= "55dp"
		android:layout_height= "55dp"
		android:gravity="center"
		android:layout_centerInParent="true"
		android:background="@drawable/player_image"
		android:scaleType="fitCenter"
		/>
    
    <ImageView 
        android:id="@+id/round_active"
        android:layout_height="60dp"
        android:layout_width="60dp"
        android:background="@drawable/avatar_circle"
        android:layout_centerInParent="true"
        
       
        />
    
    <ImageView 
        android:id="@+id/myrank_fbconnected"
        android:layout_width="20dp" 
        android:layout_height="20dp"
        android:layout_marginTop="42dp"
        android:layout_marginLeft="100dp"
        />
    <RelativeLayout
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="100dp"
        android:background="@drawable/red_circle">
        <TextView 
        android:id="@+id/myrank_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:textSize="9sp"
        android:textColor="@color/White"
        android:text="13"/>
        
    </RelativeLayout>
        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:orientation="vertical"
            android:layout_marginLeft="170dp"
            
            >
            
            <TextView
                android:id="@+id/myrank_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/White"
                android:layout_centerVertical="true"
                />
            
        </RelativeLayout>
            
        
    </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true">
		
        <ListView
          		android:layout_width="fill_parent"
    			android:layout_centerHorizontal="true" 
    			android:layout_height="500dp"
          		android:id="@+id/listRanking"
          		android:fadingEdge="horizontal"
          		android:fadingEdgeLength="10dp"
          		android:longClickable="true"
          		
          		android:background="@color/transparent"
          		android:layout_marginTop="100dp"
          		android:divider="@null"
				android:dividerHeight="0dp">
       		</ListView>
        
    </RelativeLayout>
    
    


</RelativeLayout>