<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/transparent">
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
    	
            <TextView 
                android:id="@+id/quickview_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:textColor="@color/White"
                android:text="Quick View"
                android:gravity="center"/>
            
            
                <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            >
        	<ProgressBar
    			
            	android:layout_width="fill_parent"
            	android:layout_height="30dp"
            	android:maxHeight="20dip"
    			android:minHeight="10dip"
    			android:id="@+id/progress_bar"
    			style="?android:attr/progressBarStyleHorizontal"
    			android:layout_margin="10dp"
    			android:max="100"
    			android:progress="50"
    			android:progressDrawable="@drawable/greenprogress" 
    			android:layout_marginTop="190dp"/>
        	<ImageView
    			android:id="@+id/circle_back_1" 
    			android:layout_width="50dp" 
    			android:layout_height="50dp"
    			android:background="@drawable/circle_back_dark"/>
        	
        	<ImageView
    			android:id="@+id/circle_one" 
    			android:layout_width="40dp" 
    			android:layout_height="40dp"
    			android:layout_marginLeft="5dp"
    			android:layout_marginTop="5dp"
    			android:background="@drawable/circle_two"/>
        	<TextView
        	    android:id="@+id/currentLevel"
        	    android:layout_width="40dp" 
    			android:layout_height="40dp"
    			android:layout_marginLeft="5dp"
    			android:layout_marginTop="10dp"
    			android:paddingLeft="7dp"
    			android:textSize="20dp"
    			android:textColor="@color/White"
    			android:text="18"/>
        	<ImageView
    			android:id="@+id/circle_back_2" 
    			android:layout_width="50dp" 
    			android:layout_height="50dp"
    			android:layout_alignParentRight="true"
    			android:background="@drawable/circle_back_dark"/>
        	<ImageView
    			android:id="@+id/circle_two" 
    			android:layout_width="40dp" 
    			android:layout_height="40dp"
    			android:layout_alignParentRight="true"
    			android:layout_marginRight="5dp"
    			android:layout_marginTop="5dp"
    			android:background="@drawable/circle_two"/>
        	<TextView 
        	    android:id="@+id/nextLevel"
        	    android:layout_width="40dp"
        	    android:layout_height="40dp"
        	    android:layout_alignParentRight="true"
        	    android:paddingLeft="2dp"
        	    android:layout_marginTop="10dp"
        	    android:textSize="20dp"
        	    android:textColor="@color/White"
        	    android:text="19"/>
        </RelativeLayout>
    	
	 	
	 
	 	<RelativeLayout
	 	    android:layout_width="fill_parent"
	 	    android:layout_height="wrap_content"
	 	    android:orientation="horizontal"
	 	    android:layout_marginTop="20dp">
        	
	 	    <ImageView
	 	        android:layout_width="40dp"
	 	        android:layout_height="30dp"
	 	        android:background="@drawable/ranking"
	 	        android:layout_centerVertical="true"/>
	 	    <TextView 
	 	        android:id="@+id/rankingText"
	 	        android:layout_width="wrap_content"
	 	        android:layout_height="wrap_content"
	 	        android:textSize="22dp"
	 	        android:textColor="@color/White"
	 	        android:text="Rank"
	 	        android:layout_marginLeft="60dp"
	 	        android:layout_centerVertical="true"/>
        	<TextView
        	    android:id="@+id/quick_ranking"
        	    android:layout_width="wrap_content"
        	    android:layout_height="wrap_content"
        	    android:textSize="20dp"
        	    android:textColor="@color/White"
        	    android:text="168"
        	    android:layout_alignParentRight="true"
        	    android:layout_centerVertical="true"
        	    />
	 	    
	 </RelativeLayout>
	 
	 	<RelativeLayout
	 	    android:layout_width="fill_parent"
	 	    android:layout_height="wrap_content"
	 	    android:orientation="horizontal"
	 	    android:layout_marginTop="15dp">
        	
	 	    <ImageView
	 	        android:layout_width="40dp"
	 	        android:layout_height="30dp"
	 	        android:background="@drawable/stats"
	 	        android:layout_centerVertical="true"/>
	 	    <TextView 
	 	        android:id="@+id/statsText"
	 	        android:layout_width="wrap_content"
	 	        android:layout_height="wrap_content"
	 	        android:textSize="22dp"
	 	        android:textColor="@color/White"
	 	        android:text="Stats"
	 	        android:layout_centerVertical="true"
	 	        android:layout_marginLeft="60dp"/>
        	<TextView
        	    android:id="@+id/quick_stats"
        	    android:layout_width="wrap_content"
        	    android:layout_height="wrap_content"
        	    android:textSize="20dp"
        	    android:textColor="@color/White"
        	    android:text="40%"
        	    android:layout_alignParentRight="true"
        	    android:layout_centerVertical="true"
        	    />
	 	    
	 </RelativeLayout>
	 
	 	
	 
	 	</LinearLayout>
	 
</LinearLayout>